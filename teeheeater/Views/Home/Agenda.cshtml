@using teeheeater.Database
@model List<Voorstellingen>

@{
    ViewData["Title"] = "agenda";
}

@section script {
    <link href="~/css/site-light.css" rel="stylesheet" id="theme-link">
    <link href="~/css/agenda.css" rel="stylesheet">
}

<div class="agendaBody">
    @foreach (Voorstellingen voorstelling in Model)
    {
        <a class="agendaBtn" href="voorstellingen/@voorstelling.Id">
            <img src="@voorstelling.Foto" class="agenda_img">
            <div class="btnText">
                <h3>@voorstelling.Naam</h3>
                <p>@voorstelling.Datum</p>
                <p>@voorstelling.Tijd</p>
            </div>
        </a>
    }
</div>