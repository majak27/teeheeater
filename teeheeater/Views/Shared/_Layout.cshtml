<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Open+Sans:wght@500&display=swap" rel="stylesheet">
</head>

<body>
    <header>
            <a href="/" class="logo">
                <div>
                    <img src="~/img/logo.png" class="logo">
                </div>
            </a>
            <div class="nav">
                <a class="btn" href="/">home</a>
                <a class="btn" href="/nieuws">nieuws</a>
                <a class="btn" href="/agenda">agenda</a>
                <a class="btn" href="/voorstellingen">voorstellingen</a>
                <a class="btn" href="/contact">contact</a>
                <div class="search">
                    <input type="text" placeholder="zoeken...">
                </div>
            </div>
    </header>
    <div>
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            <ul class="breadcrumbs">
                <li class="breadcrumbs__item">
                    <a href="/" class="breadcrumbs__link">home</a>
                </li>
                <li class="breadcrumbs__item">
                    <a href="/@ViewData["prevTitle"]" class="breadcrumbs__link">@ViewData["prevTitle"]</a>
                </li>
                <li class="breadcrumbs__item">
                    <a href="/@ViewData["Title"]" class="breadcrumbs__link breadcrumbs__link--active">@ViewData["Title"]</a>
                </li>
            </ul>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <text>Volg ons ook op de socials!<br>e-mail: teeheeatermakers@teehee.com<br />tel. nr: 0800 6969 4200</text>
        <a href="https://www.instagram.com/" class="insta" target="_blank">
            <img src="~/img/insta.png">
        </a>
        <img src="~/img/logo2.png" class="logo2">
    </footer>

    @RenderSection("script", false)
</body>
</html>
