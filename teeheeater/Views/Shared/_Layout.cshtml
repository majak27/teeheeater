<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" href="~/img/logo.png">
    <link rel="stylesheet" href="~/css/site-light.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&family=Open+Sans:wght@500&display=swap" rel="stylesheet">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link id="theme" rel="stylesheet"
          type="text/css" href="/css/site-light.css" />

    

</head>

<body>

    <button class="btn-toggle">Toggle</button>
    <header>
        <a href="/" class="logo">
            <div>
                <img src="~/img/logo.png" class="logo">
            </div>
        </a>
        <div class="nav">
            <a class="btn" href="/">home</a>
            <a class="btn" href="/nieuws">nieuws</a>
            <a class="btn" href="/agenda">agenda</a>
            <a class="btn" href="/voorstellingen">voorstellingen</a>
            <a class="btn" href="/contact">contact</a>
            <div class="search">
                <input type="text" placeholder="zoeken...">
            </div>
        </div>
    </header>
    <div class="underheader">
        @*registreert niet echt op welke pagina je net nog was*@
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            <ul class="breadcrumbs">
                <li class="breadcrumbs__item">
                    <a href="/" class="breadcrumbs__link">home</a>
                </li>
                <li class="breadcrumbs__item">
                    <a href="/@ViewData["prevprevTitle"]" class="breadcrumbs__link">@ViewData["prevprevTitle"]</a>
                </li>
                <li class="breadcrumbs__item">
                    <a href="/@ViewData["prevTitle"]" class="breadcrumbs__link">@ViewData["prevTitle"]</a>
                </li>
                <li class="breadcrumbs__item">
                    <a href="/@ViewData["Title"]" class="breadcrumbs__link breadcrumbs__link--active">@ViewData["Title"]</a>
                </li>
            </ul>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Site footer -->

    <footer class="border-top footer text-muted">
        <text>e-mail: teeheeatermakers@teehee.com<br />telefoon: 0800 6969 4200</text>
        <h3>Volg ons ook op de socials!</h3>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <ul class="social-icons">
                <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a class="dribbble" href="#"><i class="fa fa-dribbble"></i></a></li>
                <li><a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
            </ul>
        </div>
        <a href="/">
            <img src="~/img/logo2.png" class="logo2">
        </a>
    </footer>

    @RenderSection("script", true)


<script>let x = document.cookie;
    const btn = document.querySelector(".btn-toggle");
    const theme = document.querySelector("#theme-link");
    btn.addEventListener("click", function () {
        // Swap out the URL for the different stylesheets
        //localStorage.getItem("theme");
        if (theme.getAttribute("href") == "/css/site-dark.css") {
            theme.href = "/css/site-light.css";
            document.cookie = "theme-light";
        } else {
            theme.href = "/css/site-dark.css";
        }
        //localStorage.setItem("theme", theme.href);
    });</script>

</body>
</html>
